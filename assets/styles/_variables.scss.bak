// Custom Variables (ev- preset)
$ev-blue-point: #136AFF;
$ev-text-main: #28324E;
$ev-bg-light: #F9F9F9;
$ev-bg-white: #FFFFFF;
$ev-border: #EAEBED;
$ev-gray-soft: #EFEFEF;
$ev-gray-text: #888888; // secondary text

// Extended Palette Tokens
$color-gray-50: #fafafa; // Hover bg
$color-gray-100: #eeeeee; // Light border
$color-gray-300: #e0e0e0; // Outer BG
$color-gray-400: #cccccc; // Standard border
$color-gray-700: #666666; // Subtext
$color-gray-900: #333333; // Primary text

$color-blue-50: #E8ECF8; // Active item bg

// Spacing Tokens
$space-1: 1px;
$space-2: 2px;
$space-4: 4px;
$space-6: 6px;
$space-8: 8px;
$space-10: 10px;
$space-12: 12px;
$space-14: 14px;
$space-16: 16px;
$space-20: 20px;
$space-24: 24px;
$space-28: 28px;
$space-32: 32px;
$space-42: 42px;

// Layout Tokens
$layout-container-width: 360px;
$layout-container-height: 740px;
$layout-sidebar-width: 100px;
$layout-sidebar-item-height: 90px;
$layout-header-icon-size: 28px;

$ev-font-family: 'Pretendard', -apple-system, BlinkMacSystemFont, system-ui, Roboto, 'Helvetica Neue', 'Segoe UI', 'Apple SD Gothic Neo', 'Malgun Gothic', 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', sans-serif;

// Bootstrap Overrides
$primary: $ev-blue-point;
$font-family-sans-serif: $ev-font-family;
$body-bg: $ev-bg-light;
$body-color: $ev-text-main;
