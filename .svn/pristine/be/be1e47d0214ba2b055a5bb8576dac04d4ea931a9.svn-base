@charset "UTF-8";

.bottom-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: rem(75); // 모바일 내비게이션 높이
    background-color: $white;
    // border-top: none; // 그림자 또는 테두리 활용
    // border-top: 1px solid $gray-50;
    // box-shadow: 0 rem(-4) rem(10) rgba(0, 0, 0, 0.05);

    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 rem(16);
    z-index: 1000;
    box-sizing: border-box;

    .nav-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        flex: 1;
        gap: rem(4);
        min-width: rem(48); // 터치 영역 확보
        height: 100%;
        color: $gray-300; // 색상 코드
        text-decoration: none;
        @include mobile-touch-effect; // 터치 피드백 추가

        .icon {
            width: rem(24);
            height: rem(24);
            display: flex;
            align-items: center;
            justify-content: center;

            svg {
                width: 100%;
                height: 100%;
                // 기본 아이콘 스타일 처리
                // 플레이스홀더 아이콘을 위한 안전장치로 스트로크 사용
            }
        }

        .label {
            font-size: rem(10);
            font-weight: 600; // 세미볼드
            line-height: 1.5;
            color: inherit;
            letter-spacing: -0.2px;
            white-space: nowrap;
        }

        &.nav-center {

            // 중앙 로고 아이템
            .eclub-logo-placeholder {
                font-family: $font-family-base;
                font-weight: 700;
                font-size: rem(20);
                color: $primary-gold;
                letter-spacing: -0.05em;
                display: flex;
                align-items: center;
                justify-content: center;

                // 텍스트 로고 스타일링
                // "e" in yellow, "클럽" in dark gray if possible?
                // For now, uniform color or handled by SVGs
            }
        }

        &.active,
        &:hover {
            color: $gray-700;

            .icon svg {
                path: $gray-700; // 스트로크 아이콘 가정
            }
        }
    }
}